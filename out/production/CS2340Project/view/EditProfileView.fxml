<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="550.0" prefWidth="600.0" styleClass="background-frame"
            stylesheets="@css/Register.css"
            xmlns="http://javafx.com/javafx/8.0.102"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="controller.EditProfileController">
    <Label alignment="CENTER" layoutX="209.0" layoutY="33.0" prefHeight="39.0"
           prefWidth="179.0" text="My Profile"
           textAlignment="CENTER" textFill="WHITE">
        <font>
            <Font size="20.0" />
        </font>
    </Label>
    <TextField fx:id="emailField" layoutX="212.0" layoutY="89.0"
               prefHeight="28.0" prefWidth="179.0"
               promptText="placeholder" styleClass="text-field"
               stylesheets="@css/EditProfile.css" />
    <Button layoutX = "230.0" layoutY="190.0" prefHeight="28.0"
            prefWidth="150.0"
            onAction="#changePassword" text="Change Password"
            style="-fx-background-radius: 10;"
            styleClass="register-button" textFill="#005580"/>
    <TextField fx:id="addressLine1Field" layoutX="209.0" layoutY="278.0"
               prefWidth="179.0"
               promptText="Enter Address Line 1" styleClass="text-field"
               stylesheets="@css/EditProfile.css" />
    <TextField fx:id="cityField" layoutX="210.0" layoutY="317.0"
               prefHeight="28.0" prefWidth="179.0"
               promptText="City" styleClass="text-field"
               stylesheets="@css/EditProfile.css" />
    <TextField fx:id="zipcodeField" layoutX="210.0" layoutY="357.0"
               prefHeight="28.0" prefWidth="102.0"
               promptText="Zip Code" styleClass="text-field"
               stylesheets="@css/EditProfile.css" />
    <ComboBox fx:id="stateComboBox" layoutX="318.0" layoutY="357.0"
              prefHeight="27.0" prefWidth="70.0" />
    <Label fx:id="userTypeLbl" alignment="CENTER" layoutX="212.0"
           layoutY="401.0" prefHeight="39.0"
           prefWidth="179.0" text="User Type" textAlignment="CENTER"
           textFill="WHITE" />
    <Button ellipsisString="" layoutX="267.0" layoutY="451.0"
            mnemonicParsing="false"
            onAction="#updateUser" prefHeight="27.0" prefWidth="69.0"
            style="-fx-background-radius: 10;"
            styleClass="register-button" stylesheets="@css/Register.css"
            text="Confirm" textFill="#005580" />
    <Hyperlink alignment="CENTER" layoutX="267.0" layoutY="487.0"
               onAction="#cancel"
               prefHeight="25.0" prefWidth="69.0" styleClass="hyper-link"
               stylesheets="@css/Register.css" text="Cancel" />
</AnchorPane>
